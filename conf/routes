# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET        /                        controllers.Application.index

# API V1
GET        /instances            controllers.Api.instanceList
GET        /instances/:id        controllers.Api.instance(id)
GET        /regions              controllers.Api.regionList
GET        /accounts             controllers.Api.accountList
GET        /vendors              controllers.Api.vendorList
GET        /apps                 controllers.Api.appList
GET        /stacks               controllers.Api.stackList
GET        /stages               controllers.Api.stageList
GET        /roles                controllers.Api.roleList
GET        /mainclasses          controllers.Api.mainclassList

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file            controllers.Assets.at(path="/public", file)
